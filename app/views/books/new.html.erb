<h1 class="text-2xl font-bold text-blue-700 mb-6">ðŸ“š Add a Book</h1>

<%= form_with model: @book, html: { class: "space-y-6 max-w-xl mx-auto" } do |f| %>
  <div>
    <%= f.label :title, class: "block text-sm font-medium text-white mb-1" %>
    <%= f.text_field :title, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :author, class: "block text-sm font-medium text-white mb-1" %>
    <%= f.text_field :author, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :description, class: "block text-sm font-medium text-white mb-1" %>
    <%= f.text_area :description, rows: 4, class: "w-full px-3 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500" %>
  </div>

  <div>
    <%= f.label :image, class: "block text-sm font-medium text-white mb-1" %>
    <%= f.file_field :image, class: "block w-full text-sm text-gray-600 border border-gray-300 rounded cursor-pointer bg-white focus:outline-none" %>
  </div>

  <%= f.submit "Create", class: "bg-blue-600 text-white px-6 py-2 rounded hover:bg-blue-700" %>
<% end %>
