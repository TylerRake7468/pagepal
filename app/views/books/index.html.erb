<h1 class="text-3xl font-bold mb-6">All Books</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
  <% @books.each do |book| %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden border hover:shadow-lg transition duration-300">
      
      <% if book.image.attached? %>
        <%= image_tag book.image, class: "w-full h-60 object-contain bg-white" %>
      <% end %>

      <div class="p-4 flex flex-col justify-between flex-1">
        <div>
          <h2 class="text-xl font-semibold text-blue-700 mb-1">
            <%= link_to book.title, book_path(book) %>
          </h2>

          <p class="text-sm text-gray-600 mb-2">By <%= book.author %></p>

          <p class="text-gray-700 text-sm mb-4">
            <%= truncate(book.description, length: 30) %>
          </p>
        </div>

        <%= link_to "View Details", book_path(book),
                    class: "inline-block text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded text-sm w-full text-center mt-auto" %>
      </div>

    </div>
  <% end %>
</div>