<div class="max-w-4xl mx-auto px-4 py-6 bg-white rounded-lg shadow-md">
  <h1 class="text-3xl font-bold text-blue-700 mb-4">Your Profile</h1>

  <div class="grid sm:grid-cols-2 gap-6 mb-8 bg-white p-4 rounded-md border text-gray-800">
    <p><strong>Email:</strong> <%= current_user.email %></p>
    <p><strong>Total Books Added:</strong> <%= current_user.books.count %></p>
    <p><strong>Total Recommendations:</strong> <%= @recommendations.count %></p>
    <p><strong>Total Votes Received:</strong> <%= @recommendations.sum(&:votes_count) %></p>
  </div>

  <h2 class="text-2xl font-semibold mb-4">Your Recommendations</h2>

  <% if @recommendations.any? %>
    <div class="space-y-4">
      <% @recommendations.each do |rec| %>
        <div class="p-4 bg-gray-50 border rounded shadow-sm">
          <h3 class="text-lg font-semibold text-blue-700">
            <%= link_to rec.book.title, book_path(rec.book) %>
          </h3>
          <p class="text-gray-700 mt-1"><%= rec.review %></p>
          <p class="text-sm text-gray-500 mt-2">Votes: <%= rec.votes_count %></p>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500 italic">You havenâ€™t recommended any books yet.</p>
  <% end %>
</div>
